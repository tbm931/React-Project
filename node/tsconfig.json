{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "Node",
    "rootDir": "./",
    "removeComments": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
      "express",
      "jest"
    ],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "./app.ts",
    "./controllers",
    "./routes",
    "Types.ts",
    "./__tests__",
  ],
  "exclude": [
    "dist",
    "node_modules",
    "eslint.config.js",
    "**/__tests__/**/*"
  ]
}